<Window x:Class="TimeTracker.NotesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTracker"
        mc:Ignorable="d"
        Title="NotesWindow" Height="475" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="790"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="390"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtNotes" Grid.Column="1" Grid.Row="1" Height="440" Width="790" FontSize="10" Margin="0,0,0,5" AcceptsReturn="True"/>
        <Button x:Name="btnNotesSave" Grid.Column="1" Grid.Row="2" Height="40" Width="100" Content="SAVE &amp; CLOSE" Margin="0,0,0,5"/>
    </Grid>
</Window>
